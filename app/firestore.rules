// Firestore Security Rules for TCG Tournament Manager
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 開発環境では全てのアクセスを許可
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 本番環境では以下のルールを適用することを推奨:

      allow write: if request.auth != null; // 認証済みユーザーのみ
    }
    
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    */
  }
}